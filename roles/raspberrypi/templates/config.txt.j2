# Raspberry Pi 4 Configuration for Dual HDMI Setup
# Generated by Ansible

# Enable dual HDMI output with forced hotplug
hdmi_force_hotplug:0=1
hdmi_force_hotplug:1=1

# HDMI 0 (Console) - 1920x1080 60Hz
hdmi_group:0=1
hdmi_mode:0=16
hdmi_drive:0=2

# HDMI 1 (Python/Pygame) - 1920x1080 60Hz  
hdmi_group:1=1
hdmi_mode:1=16
hdmi_drive:1=2

# Enable both displays
max_framebuffers=2

# GPU memory split for graphics performance
gpu_mem=128

# Disable WiFi
dtoverlay=disable-wifi

# Enable SSH
enable_uart=1