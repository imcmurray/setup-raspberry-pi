# Raspberry Pi 4 Configuration for Dual HDMI Setup
# Generated by Ansible

# Force both HDMI ports to be active
hdmi_force_hotplug:0=1
hdmi_force_hotplug:1=1

# HDMI 0 (Console) - 1920x1080 60Hz
hdmi_group:0=1
hdmi_mode:0=16
hdmi_drive:0=2

# HDMI 1 (Pygame) - 1920x1080 60Hz  
hdmi_group:1=1
hdmi_mode:1=16
hdmi_drive:1=2

# Force framebuffer creation for both displays
max_framebuffers=2
framebuffer_width=1920
framebuffer_height=1080

# Ensure console stays on HDMI 0
console=tty1

# GPU memory for graphics
gpu_mem=128

# Disable WiFi
dtoverlay=disable-wifi

# Enable SSH
enable_uart=1