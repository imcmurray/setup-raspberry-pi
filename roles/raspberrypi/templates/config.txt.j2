# Raspberry Pi 4 Configuration for Dual HDMI Setup
# Generated by Ansible

# Enable dual HDMI output
hdmi_force_hotplug:0=1
hdmi_force_hotplug:1=1

# HDMI 0 (Console) - 1920x1080 60Hz
hdmi_group:0=1
hdmi_mode:0=16
hdmi_drive:0=2

# HDMI 1 (Python/Pygame) - 1920x1080 60Hz
hdmi_group:1=1
hdmi_mode:1=16
hdmi_drive:1=2

# Enable both displays
display_auto_detect=1
max_framebuffers=2

# Enable framebuffer console on both displays
enable_dpi_lcd=1
dpi_group=2
dpi_mode=82

# GPU memory split for better graphics performance
gpu_mem=128

# Enable camera (if needed)
camera_auto_detect=1

# Audio output via HDMI
hdmi_drive=2

# Disable WiFi
dtoverlay=disable-wifi

# Enable SSH
enable_uart=1

# Performance settings
arm_boost=1
over_voltage=2
arm_freq=1750